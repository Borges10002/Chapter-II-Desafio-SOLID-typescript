{
  "openapi": "3.0.0",
  "info": {
    "title": "Atlas",
    "description": "Essa é uma documentação para o Atlas API",
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "users",
      "description": "Gerenciamento de usuários"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": ["users"],
        "summary": "Cria um novo usuário.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "borges",
                  "email": "borgesdevelop@gmail.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "admin": false,
                    "id": "5ca0198e-ec03-48a7-bb96-954918646600",
                    "name": "borges",
                    "email": "borgesdevelop@gmail.com",
                    "created_at": "2022-11-22T01:26:23.570Z",
                    "updated_at": "2022-11-22T01:26:23.570Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Email já está sendo utilizado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "User already exists."
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["users"],
        "summary": "Retorna todos os usuários.",
        "description": "Somente usuário `admin` pode acessar.",
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "admin": {
                        "type": "boolean"
                      },
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "updated_at": {
                        "type": "string"
                      }
                    },
                    "example": [
                      {
                        "admin": true,
                        "id": "c7fc2e45-7a9e-4ca6-9023-06a554567155",
                        "name": "borges",
                        "email": "borgesdevelop@gmail.com",
                        "created_at": "2022-11-22T02:15:02.295Z",
                        "updated_at": "2022-11-22T02:15:02.295Z"
                      },
                      {
                        "admin": false,
                        "id": "745c9773-119d-40be-aa66-4af7aae4b045",
                        "name": "borges3",
                        "email": "borgesdevelop3@gmail.com",
                        "created_at": "2022-11-22T02:15:56.720Z",
                        "updated_at": "2022-11-22T02:15:56.720Z"
                      }
                    ]
                  }
                }
              }
            }
          },
          "400": {
            "description": "Usuário sem permissão ou Usuário não encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "Only admins can access the list."
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["users"],
        "summary": "Retorna um usuário específico.",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "description": "ID do usuário",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "admin": false,
                    "id": "745c9773-119d-40be-aa66-4af7aae4b045",
                    "name": "borges3",
                    "email": "borgesdevelop3@gmail.com",
                    "created_at": "2022-11-22T02:15:56.720Z",
                    "updated_at": "2022-11-22T02:15:56.720Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "User not found"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": ["users"],
        "summary": "Torna admin um usuário.",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "admin": true,
                    "id": "745c9773-119d-40be-aa66-4af7aae4b045",
                    "name": "borges3",
                    "email": "borgesdevelop3@gmail.com",
                    "created_at": "2022-11-22T02:15:56.720Z",
                    "updated_at": "2022-11-22T02:15:56.720Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "User not found"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
