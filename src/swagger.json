{
  "openapi": "3.0.0",
  "info": {
    "title": "Atlas",
    "description": "Essa é uma documentação sobre a atals API",
    "version": "1.0.0",
    "contact": {
      "email": "borgesdevelop@gmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["users"],
        "description": "Gerenciamento de usuários",
        "summary": "Criar um novo usuário.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "exemple": {
                  "name": "User nane sample",
                  "description": "User email sample"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "create new users"
          },
          "400": {
            "description": "Should not be able to create new users when email is already taken"
          }
        }
      },

      "get": {
        "tags": ["users"],
        "summary": "Retorno todos os usuários",
        "description": "Somente usuário admin pode acessar.",
        "parameters": [
          {
            "name": "user_id",
            "in": "header",
            "description": "Codigo unico do id criado",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "admin": {
                        "type": "string"
                      },
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "date"
                      },
                      "update_at": {
                        "type": "date"
                      },
                      "role": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Usuário se permissão ou Usuário não encontrado"
          }
        }
      }
    },

    "/users/{user_id}": {
      "get": {
        "tags": ["users"],
        "summary": "Retorno um usuário especifico",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "user_id ID do usuario",
            "required": true,
            "Schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "admin": {
                        "type": "boolean"
                      },
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "Date"
                      },
                      "update_at": {
                        "type": "Date"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado"
          }
        }
      }
    },

    "/users/{user_id}/admin": {
      "patch": {
        "tags": ["users"],
        "summary": "Torna admin um usuário",

        "parameters": [
          {
            "name": "user_id",
            "in": "patch",
            "description": "Codigo unico do id criado",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "admin": {
                        "type": "string"
                      },
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "date"
                      },
                      "update_at": {
                        "type": "date"
                      },
                      "role": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado"
          }
        }
      }
    }
  }
}
